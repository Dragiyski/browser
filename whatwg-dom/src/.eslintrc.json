{
    "root": true,
    "extends": "standard",
    "plugins": [
        "import"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "requireConfigFile": false,
        "babelOptions": {
            "allowAwaitOutsideFunction": true
        }
    },
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "warn",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "no-unused-vars": [
            "warn"
        ],
        "keyword-spacing": [
            "error"
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "eqeqeq": [
            "warn",
            "always",
            {
                "null": "ignore"
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "standard/no-callback-literal": "off",
        "no-new-func": "off",
        "no-mixed-operators": "off",
        "no-return-assign": "off",
        "no-debugger": "off",
        "no-labels": "off",
        "no-void": "off"
    }
}